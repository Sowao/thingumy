<div class="row">
  <div class="col-sm-6">
    <div class="row">
      <div class="col-md-offset-1 col-md-6">
        <h3 class="exfrasis-heading">
          Most liked:
        </h3>
      </div>
    </div>
    <% @top_artists.each do |artist| %>
      <div class="row artist-top-liked-row">
        <div class="col-md-6 col-md-offset-2 col-xs-6">
          <%= artist.to_s %>
        </div>
        <div class="col-md-2 col-xs-6">
          <%= artist.artwork.likes.count %>
          hearts
        </div>
      </div>
    <% end %>
  </div>

  <div class="col-sm-6">
    <div class="row">
      <div class="col-md-offset-1 col-md-6">
        <h3 class="exfrasis-heading">
          Recent Comments:
        </h3>
      </div>
    </div>
    <% @recent_comments.each do |comment| %>
      <div class="row recent-comments-row">
        <div class="col-md-6 col-md-offset-2 col-xs-6">
          <%= comment.text %>
        </div>
        <div class="col-md-2 col-xs-6">
          <% if comment.user %>
            by
            <%= comment.try(:user).try(:initials) %>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
